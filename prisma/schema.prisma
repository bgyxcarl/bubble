// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  tables        UserTable[] // 用户上传的表
  addressTags   AddressTag[] // 用户标记的地址
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum TableType {
  TRANSACTION
  TOKEN_TRANSFER
  MIXED
}

enum TagVisibility {
  PUBLIC
  PRIVATE
}

model UserTable {
  id        String    @id @default(cuid())
  name      String // 表的名称
  type      TableType // 表的类型（transaction 或 tokenTransfer）
  createdAt DateTime  @default(now())

  userId         String
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  // updatedAt  DateTime    @updatedAt
  // data       Json        // 表的数据，存储为 JSON 格式
  transactions   Transaction[]
  tokenTransfers TokenTransfer[]

  @@unique([userId, name])
}

model Transaction {
  id     String   @id @default(cuid())
  hash   String // 交易哈希
  method String // 交易方式
  block  Int // 区块号
  time   DateTime // 交易发生的时间
  from   String // 发起者地址
  to     String // 接收者地址
  amount Float // 交易金额
  txnFee Float // 交易费用
  // createdAt   DateTime @default(now())
  // updatedAt   DateTime @updatedAt

  tableId String
  table   UserTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@index([tableId])
}

model TokenTransfer {
  id     String   @id @default(cuid())
  hash   String // 代币转移哈希
  method String // 代币转移方法
  block  Int // 区块号
  time   DateTime // 转移发生的时间
  from   String // 转出地址
  to     String // 转入地址
  amount Float // 代币转移数量
  token  String // 代币种类（如 ETH, BTC）
  // createdAt   DateTime @default(now())
  // updatedAt   DateTime @updatedAt

  tableId String
  table   UserTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@index([tableId])
}

model AddressTag {
  id         Int           @id @default(autoincrement())
  address    String // 区块链地址
  content    String        @default("普通地址") // 标签内容（如：交易所、DEX等）
  behavior   String // 标签行为（如：对敲、倾销等）
  source     String // 信息来源（来自用户/AI/三方）
  visibility TagVisibility @default(PUBLIC)
  createdAt  DateTime      @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([address])
  @@index([userId])
}
